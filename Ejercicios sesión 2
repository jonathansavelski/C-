//Ejercicio 1
Console.WriteLine("Escribe tu nombre");
string nombre = Console.ReadLine();
Console.WriteLine("Escribe tu apellido");
string apellido = Console.ReadLine();
Console.WriteLine("Por favor ingrese su edad:");
int edad = int.Parse(Console.ReadLine());
Console.WriteLine("¿Sabe programar? (Sí o No)");
string sabeProgramarString = Console.ReadLine();
bool sabeProgramar = sabeProgramarString.ToLower() == "sí" || sabeProgramarString.ToLower() == "si";

// Generamos el mensaje utilizando las variables que hemos recibido
string mensaje = $"Hola {nombre} {apellido}, tienes {edad} años y {(sabeProgramar ? "sí" : "no")} sabes programar.";
// Mostramos el mensaje en pantalla
Console.WriteLine(mensaje);

